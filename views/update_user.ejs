<!-- Main Site -->
<main id="site-main">
  <div class="container">
    <div class="form-title text-center">
      <h2 class="text-dark">Update Product</h2>
      <span class="text-light">Use the below form to Update an account</span>
    </div>

    <!-- add user form -->
    <!-- form handling -->
    <form method="POST" id="update_user">
      <div class="new_user">
        <div class="form-group">
          <label for="name" class="text-light">Name</label>
          <input type="hidden" name="id" value="<%= user._id %>">
          <input type="number" name="rating" value="<%= user.rating %>" placeholder="Rating">
        </div>
        <div class="form-group">
          <button type="submit" class="btn text-dark update">Update</button>
        </div>

      </div>
    </form>

  </div>
</main>
<!-- /Main Site -->

