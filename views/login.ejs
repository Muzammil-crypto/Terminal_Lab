<div class="row mt-4">
  <div class="col-md-4">
    <div class="">
      <h1 class="text-center mb-3">  Login</h1>
      <form action="/users/login" method="POST">
        <div class="form-group">
          <input
            type="email"
            id="email"
            name="email"
            class="form-control"
            placeholder="Enter Email"
          />
        </div>
        <div class="form-group">
          <input
            type="password"
            id="password"
            name="password"
            class="form-control"
            placeholder="Enter Password"
          />
        </div>
        <button type="submit" class="btn btn-primary btn-block" style="background-color: #06d6a0;width: 10rem;"  >Login</button>
      </form>
      <p class="lead mt-4">
      <a href="/users/register" style="background-color: #999;width: 10rem;color:#111" >Register</a>
      </p>
    </div>
  </div>
</div>
